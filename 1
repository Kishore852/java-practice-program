import java.util.*;
public class Main
{
    public static void main (String[] args)
    {
        Scanner sc= new Scanner(System.in);
        int a= sc.nextInt();
        int b=sc.nextInt();
        int c= 2*(a+b);
        int d= a*b;
        System.out.println("Required length is ", c);
        System.out.print("Required quantity of carpet is ", d);
    }
}
